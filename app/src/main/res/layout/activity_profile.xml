<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.genecorp.healtogether.profileActivity"
    android:background="@mipmap/background">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="125dp"
        android:background="@drawable/roundlayout"
        android:id="@+id/dpLayout"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/ageTxt"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:src="@mipmap/download"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp" />



    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#f7f7f7"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="35dp"
        android:elevation="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Mail"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/emailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/emailTextView"
                    android:background="@drawable/roundededittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="18dp"
                    android:textAlignment="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/dobTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Birth"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/dobTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/dobTextView"
                    android:background="@drawable/roundededittext"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="18dp"
                    android:textAlignment="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/countryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="County"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/countryTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/countryTextView"
                    android:background="@drawable/roundededittext"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="18dp"
                    android:textAlignment="center"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/heightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/heightTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/heightTextView"
                    android:background="@drawable/roundededittext"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="18dp"
                    android:textAlignment="center"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/weightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/weightTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/weightTextView"
                    android:background="@drawable/roundededittext"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="18dp"
                    android:textAlignment="center"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/hintColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/genderTextView"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/maleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/genderbutton"
                        android:drawableLeft="@drawable/manuser"
                        android:paddingLeft="20dp"
                        android:textColor="#DC4E41"
                        android:text="Male"
                        android:textSize="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="60dp"/>
                    <Button
                        android:id="@+id/femaleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/genderbutton"
                        android:drawableLeft="@drawable/girl"
                        android:paddingLeft="20dp"
                        android:textColor="#DC4E41"
                        android:text="Female"
                        android:textSize="10dp"
                        android:paddingRight="20dp"/>
                </LinearLayout>

                <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="60dp"-->
                    <!--android:layout_marginRight="30dp"-->
                    <!--android:layout_toRightOf="@+id/genderTextView"-->
                    <!--android:background="@drawable/roundededittext"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:textColor="#000000"-->
                    <!--android:textColorHint="@color/hintColor"-->
                    <!--android:textSize="20dp" />-->

            </RelativeLayout>
        </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


</RelativeLayout>
